{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "playwright": {
      "type": "object",
      "properties": {
        "majsoul_url": {
          "type": "string",
          "description": "The URL for the Majsoul game.",
          "format": "uri"
        },
        "viewport": {
          "type": "object",
          "properties": {
            "width": {
              "type": "integer",
              "description": "The width of the viewport."
            },
            "height": {
              "type": "integer",
              "description": "The height of the viewport."
            }
          },
          "required": ["width", "height"],
          "additionalProperties": false
        }
      },
      "required": ["majsoul_url", "viewport"],
      "additionalProperties": false
    },
    "model": {
      "type": "string",
      "description": "The model to use for analyzing the game."
    },
    "theme": {
      "type": "string",
      "description": "The theme to use for the application."
    },
    "ot_server": {
      "type": "object",
      "properties": {
        "server": {
          "type": "string",
          "description": "The server URL for the online service.",
          "format": "uri"
        },
        "online": {
          "type": "boolean",
          "description": "Whether to use the online service."
        },
        "api_key": {
          "type": "string",
          "description": "The API key for the online service."
        }
      },
      "required": ["server", "online", "api_key"],
      "additionalProperties": false
    },
    "autoplay": {
      "type": "boolean",
      "description": "Whether to enable autoplay for the game."
    },
    "auto_switch_model": {
      "type": "boolean",
      "description": "Whether to automatically switch the model based on the game."
    }
  },
  "required": ["playwright", "model", "theme", "ot_server", "autoplay", "auto_switch_model"],
  "description": "Settings for the application.",
  "additionalProperties": false
}
